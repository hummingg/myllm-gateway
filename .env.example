# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Moonshot (月之暗面 Kimi)
MOONSHOT_API_KEY=your_moonshot_api_key_here

# SiliconFlow (免费额度)
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# Aliyun (阿里云百炼 - 18个免费模型)
ALIYUN_API_KEY=your_aliyun_api_key_here

# iFlow
IFLOW_API_KEY=your_iflow_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 网关认证（可选，留空则不启用认证）
GATEWAY_AUTH_TOKEN=

# 服务器配置
PORT=3000
HOST=0.0.0.0

# PII 隐私信息检测配置
# 设置为 true 启用 PII 检测，检测到隐私信息时会强制路由到本地 Ollama
PII_DETECTION_ENABLED=false
PII_DETECTION_TIMEOUT_MS=3000

# 语义缓存配置
# 启用语义相似度缓存，重复或相似请求直接返回缓存结果（节省费用）
SEMANTIC_CACHE_ENABLED=false
# 相似度阈值（0-1），越高要求越严格，默认 0.95
SEMANTIC_CACHE_THRESHOLD=0.95
# 最大缓存条目数
SEMANTIC_CACHE_MAX_ENTRIES=1000
# 缓存有效期（毫秒），默认 1小时 = 3600000
SEMANTIC_CACHE_TTL_MS=3600000
# 缓存数据存储目录
SEMANTIC_CACHE_DIR=./data/cache
# Embedding 模型（需要 OpenAI API Key）
SEMANTIC_CACHE_EMBEDDING_MODEL=text-embedding-3-small
